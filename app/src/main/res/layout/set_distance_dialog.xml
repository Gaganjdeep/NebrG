<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:padding="10dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/white_corners"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textColor="@color/button_pink"
            android:textSize="21sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="@color/greydefault"/>

        <TextView
            android:id="@+id/tvKm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:gravity="right"
            android:text="km"
            android:textStyle="bold"/>

        <!--<android.support.v7.widget.AppCompatSeekBar-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:id="@+id/seekbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:theme="@style/SeekBArtheme"/>-->

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/seekbar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:dsb_allowTrackClickToDrag="false"
            app:dsb_indicatorColor="@color/button_pink"
            app:dsb_indicatorTextAppearance="@style/CustomFloaterTextAppearance"
            app:dsb_progressColor="@color/button_pink"
            app:dsb_rippleColor="@color/button_pink"
            />




        <Button
            android:padding="5dp"
            android:id="@id/btnDone"
            android:layout_margin="10dp"
            android:background="@drawable/btn_selector"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:text="Ok"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</LinearLayout>
